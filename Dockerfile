FROM node:10.15.3-alpine

ENV NODE_ENV=production
ARG AWS_ACCESS
ARG AWS_SECRET
ARG MONGODB_URI
ARG FCM_SENDER

ENV MONGODB_URI=${MONGODB_URI}
ENV AWS_ACCESS=${AWS_ACCESS}
ENV AWS_SECRET=${AWS_SECRET}
ENV FCM_SENDER=${FCM_SENDER}

WORKDIR /usr/src/app

COPY package*.json ./

COPY yarn.lock ./

RUN yarn

COPY . .

EXPOSE 4000

ENTRYPOINT ["yarn", "start"]
